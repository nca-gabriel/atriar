{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest", "Node"]
  },
  "include": ["src", "src/index.ts", "src/types", "src/test"]
}
